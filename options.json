{
  "react": {
    "pattern": "**/*.html",
    "templatesPath": "modules-dist",
    "defaultTemplate": "post",
    "before": "<!doctype html>\n",
    "reactRender": "renderToStaticMarkup"
  },
  "collection": {
    "posts": {
      "pattern": "posts/*.md",
      "sortBy": "date",
      "reverse": true
    }
  },
  "snippet": {
    "maxLength": 300
  },
  "sass": {
    "outputDir": "css/"
  },
  "watch": {
    "paths": {
      "${source}/**/*": true
    },
    "livereload": true
  }
}
