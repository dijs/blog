{
  "react": {
    "pattern": "**/*.html",
    "templatesPath": "modules-dist",
    "defaultTemplate": "post",
    "before": "<!doctype html>\n",
    "reactRender": "renderToStaticMarkup"
  },
  "collection": {
    "posts": {
      "pattern": "posts/*.md",
      "reverse": true,
      "sortBy": "date"
    }
  },
  "snippet": {
    "maxLength": 200
  },
  "sass": {
    "outputDir": "css/"
  },
  "watch": {
    "paths": {
      "${source}/**/*": true
    },
    "livereload": true
  },
  "markdown": {
    "html": true,
    "linkify": true
  },
  "express": {
    "port": 3001
  }
}
