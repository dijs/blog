{
  "name": "blog-v2",
  "version": "0.0.1",
  "description": "A Blog",
  "main": "index.js",
  "scripts": {
    "start": "node index",
    "build": "babel modules --out-dir modules-dist/",
    "watch": "nodemon --exec 'npm run build && npm start' --watch src/**/* --watch modules/**/*.js --watch index.js --watch options.json",
    "deploy": "git subtree push --prefix build origin gh-pages"
  },
  "author": "Richard van der Dys",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "metalsmith": "^2.1.0",
    "metalsmith-code-highlight": "0.0.3",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-express": "^0.1.0",
    "metalsmith-markdownit": "^0.3.0",
    "metalsmith-react": "^2.0.1",
    "metalsmith-sass": "^1.3.0",
    "metalsmith-snippet": "^2.0.0",
    "metalsmith-static": "0.0.5",
    "metalsmith-typography": "^0.1.1",
    "metalsmith-watch": "^1.0.1",
    "nodemon": "^1.8.1"
  }
}
